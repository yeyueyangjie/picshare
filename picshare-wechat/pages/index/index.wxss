.cover-pause,.cover-play{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .1);
  z-index: 1;
}
.cover-play{
  background: rgba(0,0,0,0);
}
.right-list{
  position: absolute;
  right: 30rpx;
  top: 50%;
  overflow: hidden;
  z-index: 15;
}
.headImg{
  display: block;
  width: 97rpx;
  height: 97rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  margin-bottom: 50rpx;
}

.list-icon{
  overflow: hidden;
  margin-bottom: 50rpx;
  text-align: center;
  position: relative;
  z-index: 15;
}
.right-list .list-icon:last-child{
  margin-bottom: 0;
}
.list-icon cover-image{
  display: block;
  width: 72rpx;
  height: 62rpx;
  margin: 0 auto 6rpx;
}
.list-icon cover-view{
  color: #fff;
  font-size: 24rpx;
}


.left-info{
  width: 100%;
  position: absolute;
  left: 30rpx;
  bottom: 2rpx;
  overflow: hidden;
  z-index: 15;
}
.info-title{
  color: #fff;
  font-size: 40rpx;
  margin-bottom: 30rpx;
}
.info-summary{
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 100rpx;
}
.info-address{
  width: 100%;
  color: #fff;
  font-size: 25rpx;
  margin-bottom: 10rpx;
}


