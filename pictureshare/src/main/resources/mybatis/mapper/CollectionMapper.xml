<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yeyue.pictureshare.dao.CollectionDao">
    <resultMap id="collectionMap" type="com.yeyue.pictureshare.model.CollectionEntity"></resultMap>
    <select id="getCollection" resultMap="collectionMap">
        <![CDATA[select * from collectioninfo]]>
        <where>
            collectionId = #{collectionId}
        </where>
    </select>
    <insert id="addCollection">
        insert into collectioninfo(collectionId,picShare,collected,created,del) values (#{collection.collectionId},#{collection.picShare},#{collection.collected},now(),2)
    </insert>
    <update id="updateCollection">
        update collectioninfo set del = #{collection.del}
        <where>
            collectionId = #{collection.collectionId}
        </where>
    </update>
</mapper>